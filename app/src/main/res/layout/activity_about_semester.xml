<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ui.AboutSemesterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latobold"
            android:gravity="center_horizontal"
            android:text="Department:- bca"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="177dp"
            android:fontFamily="@font/latoregular"
            android:text="Semester:- 6"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <View
            android:id="@+id/view2"
            android:layout_width="382dp"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/textView14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="131dp"
            android:layout_height="37dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="327dp"
            android:fontFamily="@font/latobold"
            android:text="Syllabus"
            android:textAllCaps="true"
            android:textColor="#304FFE"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.169"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/syllabus"
            android:layout_width="372dp"
            android:layout_height="596dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/syllabus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginStart="13dp"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="267dp"
            android:fontFamily="@font/latobold"
            android:text="fee structure"
            android:textAllCaps="true"
            android:textColor="#304FFE"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/syllabus" />

        <com.github.chrisbanes.photoview.PhotoView
            android:layout_width="389dp"
            android:layout_height="280dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/fees"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/syllabus" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>